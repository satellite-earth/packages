	"packageManager": "pnpm@9.6.0",
	"scripts": {
		"prepack": "pnpm build",
		"dev": "vite",
		"build": "tsc && vite build",
		"postbuild": "cp dist/index.html dist/404.html",
		"test": "echo no tests",
		"analyze": "npx vite-bundle-visualizer -o ./stats.html",
